/*Addition and Subtraction of Two Matrix
  by passing 2-D array into function*/
#include<stdio.h>
void sum(int[3][3],int[3][3]);     //function declaration
void sub(int[3][3],int[3][3]);     //function declaration
void mullti(int[3][3],int[3][3]);  //function declaration
int main()
{
   int a[3][3],b[3][3],i,j;
   printf("\nEnter first Matrix");
   for(i=0;i<3;i++)
       for(j=0;j<3;j++)
           scanf("%d ",&a[i][j]);

   printf("\nEnter second Matrix");
   for(i=0;i<3;i++)
       for(j=0;j<3;j++)
           scanf("%d ",&b[i][j]);

   sum(a,b);                //function colling
   sub(a,b);                //function colling
   mullti(a,b);             //function colling
   return 0;
}
void sum(int a[3][3],int b[3][3])       //function definition
{
    int c[3][3],i,j;
    printf("\nAddition....\n");
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            c[i][j]=a[i][j] + b[i][j];
            printf("%d ",c[i][j]);
        }
        printf("\n");
    }
}
void sub(int a[3][3],int b[3][3])       //function definition
{
    int c[3][3],i,j;
    printf("\nSubtraction....\n");
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            c[i][j]=a[i][j] - b[i][j];
            printf("%d ",c[i][j]);
        }
        printf("\n");
    }
}

void mullti(int a[3][3],int b[3][3])       //function definition
{
    int c[3][3],i,j;
    printf("\nMulltiplication....\n");
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            c[i][j]=a[i][j] * b[i][j];
            printf("%d ",c[i][j]);
        }
        printf("\n");
    }
}
